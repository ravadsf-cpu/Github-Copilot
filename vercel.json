{
  // Monorepo deployment: build the React app in cleary/, serve serverless functions in api/
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "cleary/package.json", "use": "@vercel/static-build" }
  ],
  // Ensure the React build output is recognized
  "outputDirectory": "cleary/build",
  // Disable Firebase auth unless explicitly enabled via env var at build time
  "env": {
    "REACT_APP_ENABLE_FIREBASE_AUTH": "false"
  },
  // Routes: allow API functions, then fall back to SPA routing
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
     { "src": "/(.*)", "dest": "/cleary/build/index.html" }
  ],
  "github": { "silent": false }
}
