{
  "buildCommand": "bash build.sh",
  "outputDirectory": "cleary/build",
  "installCommand": "npm install && cd cleary && npm install",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/main\.(.*)\.js", "destination": "/static/js/main.$1.js" },
    { "source": "/main\.(.*)\.css", "destination": "/static/css/main.$1.css" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "github": {
    "silent": false
  }
}
